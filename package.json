{
  "name": "react-redux-canvas",
  "version": "1.0.0",
  "description": "Build a web application using React, Redux and Canvas API.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack -p --progress --config=webpack.prod.js --mode production",
    "start": "env-cmd -f .env.production npm run build && node src/server/index.js",
    "client": "webpack-dev-server --config webpack.dev.js --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "__tests__/setup/setupEnzyme.js",
    "testPathIgnorePatterns": [
      "__tests__/setup/"
    ]
  },
  "author": "Kevin Huy",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "babel-polyfill": "^6.26.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "env-cmd": "^10.0.1",
    "es6-promise": "^4.2.8",
    "express": "^4.16.3",
    "namor": "^2.0.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^7.2.0",
    "react-router": "^3.2.6",
    "redux": "^4.0.5",
    "styled-components": "^5.0.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.0.0",
    "css-loader": "^2.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^26.0.1",
    "nodemon": "^1.17.3",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}
